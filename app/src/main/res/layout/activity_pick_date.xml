<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.report.PickDate">

    <Button
        android:id="@+id/buttonProceed"
        android:layout_width="149dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:text="Proceed"
        app:layout_constraintBottom_toBottomOf="@+id/textViewUltra"
        app:layout_constraintStart_toEndOf="@+id/textViewUltra"
        app:layout_constraintTop_toTopOf="@+id/textViewUltra"
        app:layout_constraintVertical_bias="0.511" />

    <NumberPicker
        android:id="@+id/hourPicker"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/hour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hour"
        app:layout_constraintVertical_bias="0.558" />

    <TextView
        android:id="@+id/hour"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Select hour"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tempdate"
        app:layout_constraintStart_toEndOf="@+id/tempdate"
        app:layout_constraintTop_toTopOf="@+id/tempdate" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="351dp"
        android:layout_height="59dp"
        android:text="Select Time to check Ultrasonic changes"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tempdate"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Select date"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textViewUltra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="70dp"
        android:text="Ultrasonic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempdate" />

</androidx.constraintlayout.widget.ConstraintLayout>